@page
@model ASS2_FE.Pages.Admin.AllAccountsModel
@{
    ViewData["Title"] = "Tất cả tài khoản";
}

<div class="container mx-auto p-4">
    <h2 class="mb-6 text-2xl font-bold text-gray-800 flex items-center">
        👥 Danh sách tất cả tài khoản
    </h2>

    <div class="overflow-x-auto shadow-md rounded-lg">
        <table class="w-full text-sm text-left text-gray-700">
            <thead class="text-xs uppercase bg-gray-800 text-white">
                <tr>
                    <th class="px-4 py-3">Email</th>
                    <th class="px-4 py-3">Họ tên</th>
                    <th class="px-4 py-3">Vai trò</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Accounts != null && Model.Accounts.Any())
                {
                    foreach (var acc in Model.Accounts)
                    {
                        <tr class="bg-white border-b hover:bg-gray-50 transition-colors">
                            <td class="px-4 py-3">@acc.AccountEmail</td>
                            <td class="px-4 py-3">@acc.AccountName</td>
                            <td class="px-4 py-3">
                                @(
                                    acc.AccountRole == 1 ? "Staff" :
                                    acc.AccountRole == 2 ? "Lecu" :
                                    "Không xác định"
                                    )
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="bg-white">
                        <td colspan="3" class="px-4 py-3 text-center text-gray-500">Không có tài khoản nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

