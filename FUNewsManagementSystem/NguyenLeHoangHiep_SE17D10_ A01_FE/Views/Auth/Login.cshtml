@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        max-width: 450px;
        margin: 3rem auto;
        padding: 2rem;
        background: linear-gradient(135deg, #ffffff 0%, #e0f7fa 100%);
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        position: relative;
        overflow: hidden;
        z-index: 10;
    }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }

    .shape {
        position: absolute;
        background: rgba(59, 130, 246, 0.1);
        border-radius: 50%;
        animation: float 15s infinite linear;
    }

    .shape:nth-child(1) {
        width: 60px;
        height: 60px;
        left: 10%;
        top: 20%;
        animation-delay: -3s;
    }

    .shape:nth-child(2) {
        width: 80px;
        height: 80px;
        left: 30%;
        top: 70%;
        animation-delay: -7s;
    }

    .shape:nth-child(3) {
        width: 50px;
        height: 50px;
        left: 80%;
        top: 30%;
        animation-delay: -5s;
    }

    

    .login-container h2 {
        text-align: center;
        color: #1e3a8a;
        font-size: clamp(1.8rem, 4vw, 2.2rem);
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        letter-spacing: 0.5px;
    }

    .form-group {
        margin-bottom: 1.25rem;
        position: relative;
        z-index: 10;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #1e3a8a;
        font-size: 1rem;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 8px;
        font-size: 1rem;
        background: rgba(255, 255, 255, 0.9);
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    input[type="email"]:focus,
    input[type="password"]:focus {
        border-color: #3b82f6;
        outline: none;
        box-shadow: 0 0 8px rgba(59, 130, 246, 0.3);
        background: #fff;
    }

    button {
        width: 100%;
        padding: 0.75rem;
        background: linear-gradient(90deg, #3b82f6 0%, #1e3a8a 100%);
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    button:hover {
        background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
    }

    button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    button:hover::before {
        left: 100%;
    }

    .error-message {
        color: #dc2626;
        text-align: center;
        margin-top: 1rem;
        font-size: 0.9rem;
        font-weight: 500;
        z-index: 10;
        position: relative;
    }

    dding: 0.6rem;
        }
    }
</style>

<div class="login-container">
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <h2>Login</h2>

    <form method="post">
        <div class="form-group">
            <label for="email"><i class="fas fa-envelope me-2"></i>Email</label>
            <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
            <label for="password"><i class="fas fa-lock me-2"></i>Password</label>
            <input type="password" id="password" name="password" required />
        </div>
        <button type="submit"><i class="fas fa-sign-in-alt me-2"></i>Login</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p class="error-message">@ViewBag.Error</p>
    }
</div>