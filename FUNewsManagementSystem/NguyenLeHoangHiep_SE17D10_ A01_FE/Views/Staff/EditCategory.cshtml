@model DataAccessObjects.DTO.CategoryDto
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Category</h2>

<form asp-action="EditCategory" method="post">
    <input type="hidden" asp-for="CategoryId" />

    <label>Category Name:</label>
    <input asp-for="CategoryName" />
    <span asp-validation-for="CategoryName" style="color:red"></span>
    <br />

    <label>Description:</label>
    <textarea asp-for="CategoryDesciption"></textarea>
    <span asp-validation-for="CategoryDesciption" style="color:red"></span>
    <br />

    <label>Visible:</label>
    <input type="checkbox" name="IsActive" @(Model?.IsActive == true ? "checked" : "") />
    <br />

    <button type="submit">Save</button>
    <a href="/Staff/CategoryList">Back</a>
</form>
